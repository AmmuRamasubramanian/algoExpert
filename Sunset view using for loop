buildings = [3, 5, 4, 4, 3, 1, 3, 2]
direction='west'
def Sunsetview(buildings,direction):
  arr=[]
  maxheight=0
  if direction == 'west':
    for i in reversed(range(len(buildings))):
      if len(arr) == 0:
        maxheight = buildings[i]
        arr.append(i)
      if buildings[i] > maxheight:
        arr.append(i)
        maxheight = buildings[i]
    arr.sort()
    return arr
  if direction == 'east':
    for i in range(len(buildings)):
      if len(arr) == 0:
        maxheight = buildings[i]
        arr.append(i)
      if buildings[i] > maxheight:
        arr.append(i)
        maxheight = buildings[i]
    arr.sort()
    return arr

print(Sunsetview(buildings,direction))
